<div class="title-container">
    <% if (title) { %>
        <div class="content__heading"><h1><%= title %></h1></div>
        <%# if (someCondition) { %>
            <%# messages() %>
        <%# } %>
        <% } else {
            res.redirect('/')
        } %>
</div>

<div class="management-button-container">
    <%- managementButtons %>
</div>

<div class="inventoryManagement-container">
    <h2 class="content__heading"> Manage Inventory </h2>
    <p class="inventoryManagmentParagraph">Choose a classification to see those inventory items.</p>
    <%- classificationList %>

    <table id="invDisplay" class="invDisplay"></table>
</div>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>