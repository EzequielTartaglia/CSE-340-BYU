<div class="title-container">
    <% if (title) { %>
        <div class="content__heading"><h1><%= title %></h1></div>
        <%# if (someCondition) { %>
            <%# messages() %>
        <%# } %>
        <% } else {
            res.redirect('/')
        } %>
</div>

<div class="main">

    <div class="cse-motor__form-container form-container">

        <form action="/account/update-account" method="POST" class="cse-motor__form" id="accountUpdateForm">

            <div class="cse-motor-form__container">
                <fieldset>
                    <legend>Account Update</legend>

                    <div class="cse-motor-form__field">
                        <label for="account_firstname" class="form__label">First Name:</label>
                        <input 
                            type="text" 
                            placeholder="Enter your first name" 
                            name="account_firstname" 
                            class="form__input" 
                            required
                            value="<%= locals.account_firstname %>"
                        >
                    </div>
            
                    <div class="cse-motor-form__field">
                        <label for="account_lastname" class="form__label">Last Name:</label>
                        <input 
                            type="text" 
                            placeholder="Enter your last name" 
                            name="account_lastname" 
                            class="form__input" 
                            required
                            value="<%= locals.account_lastname %>"
                        >
                    </div>

                    <div class="cse-motor-form__field">
                        <label for="account_email" class="form__label">New Email:</label>
                        <input 
                            class="form__input"
                            type="text" 
                            placeholder="Enter your email" 
                            name="account_email" 
                            value="<%= locals.account_email %>" 
                            required
                        >
                    </div>
                </fieldset>

                <input type="hidden" name="account_id"
                <% if(locals.account_id) { %>
                    value="<%= locals.account_id %>"
                <% } %>>

                <button type="submit" class="form__button">Update</button>
            </div>
        </form>
    </div>

    <div class="cse-motor__form-container form-container">
        <form action="/account/change-password" method="POST" class="cse-motor__form" id="passwordUpdateForm">

            <div class="cse-motor-form__container">
                <fieldset>
                    <legend>Change Password</legend>

                    <div class="cse-motor-form__field">
                        <label for="account_password" class="form__label">New Password:</label>
                        <!--<span class="form__hint">Passwords must be at least 12 characters, contain at least 1 number, 1 capital letter, and 1 special character</span>-->
                        <input type="password" placeholder="Enter your password" name="account_password" id="accountPassword" class="form__input" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                    </div>
                </fieldset>

                <input type="hidden" name="account_id"
                <% if(locals.account_id) { %>
                    value="<%= locals.account_id %>"
                <% } %>>

                <button type="submit" class="form__button">Update</button>
            </div>
        </form>
    </div>
</div>
